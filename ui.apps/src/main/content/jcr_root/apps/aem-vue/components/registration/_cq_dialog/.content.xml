<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Registration"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <titleLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Title Label"
                            name="./titleLabel"/>
                    <titleItems
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldDescription="Click '+' to add a new item"
                            fieldLabel="Add an item">
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./titleItem"
                                fieldLabel="CampaignConfigurations">
                            <items jcr:primaryType="nt:unstructured">
                                <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./title"/>
                                <value
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Value"
                                        name="./value"/>
                            </items>
                        </field>
                    </titleItems>
                    <firstNameLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="First Name Label"
                            name="./firstNameLabel"/>
                    <isFNameRequired
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            name="./isFNameRequired"
                            text="Is first name required?"
                            uncheckedValue="{Boolean}false"
                            value="{Boolean}true"/>
                    <firstNameErrorMessage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="First Name Error Message"
                            name="./firstNameErrorMessage"/>
                    <lastNameLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Last Name Label"
                            name="./lastNameLabel"/>
                    <isLNameRequired
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            name="./isLNameRequired"
                            text="Is last name required?"
                            uncheckedValue="{Boolean}false"
                            value="{Boolean}true"/>
                    <lastNameErrorMessage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Last Name Error Message"
                            name="./lastNameErrorMessage"/>
                    <emailLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Email Label"
                            name="./emailLabel"/>
                    <emailErrorMessage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Email Error Message"
                            name="./emailErrorMessage"/>
                    <passwordLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Password Label"
                            name="./passwordLabel"/>
                    <passwordMinLength
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                            fieldLabel="Password Min Length"
                            value="200"
                            min="0"
                            max="1000"
                            step="1"
                            name="./passwordMinLength"/>
                    <passwordErrorMessage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Password Error Message"
                            name="./passwordErrorMessage"/>
                    <confirmPasswordLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Confirm Password Label"
                            name="./confirmPasswordLabel"/>
                    <cPasswordMinLength
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                            fieldLabel="Confirm Password Min Length"
                            value="200"
                            min="0"
                            max="1000"
                            step="1"
                            name="./cPasswordMinLength"/>
                    <confirmPasswordErrorMessage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Confirm Password Error Message"
                            name="./confirmPasswordErrorMessage"/>
                    <submitLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Submit Label"
                            name="./submitLabel"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
